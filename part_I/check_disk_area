#reader(lib "htdp-beginner-reader.ss" "lang")((modname check_disk_area) (read-case-sensitive #t) (teachpacks ((lib "image.rkt" "teachpack" "2htdp") (lib "universe.rkt" "teachpack" "2htdp") (lib "batch-io.rkt" "teachpack" "2htdp"))) (htdp-settings #(#t constructor repeating-decimal #f #t none #f ((lib "image.rkt" "teachpack" "2htdp") (lib "universe.rkt" "teachpack" "2htdp") (lib "batch-io.rkt" "teachpack" "2htdp")) #f)))
; Number -> Number
; computes the area of a disk with radius r
(define (area-of-disk r)
(* 3.14 (* r r)))

; Any -> Number
; computes the area of a disk with radius v,
; if v is a positive number
(define (checked-area-of-disk v)
(cond
[(and (number? v) (< 0 v)) (area-of-disk v)]
[else (error "area-of-disk: positive number expected")]))

;(checked-area-of-disk -4)

(define-struct vec [x y])
; A vec is
; (make-vec PositiveNumber PositiveNumber)
; interpretation represents a velocity vector


; Any Any-> Vec
; creates vec if given two positive numbers
(define (checked-make-vec n1 n2)
  (cond [(and
          (number? n1 n2)
          (< 0 n1 n2)) (make-vec n1 n2)]
        [else (error "make-vec: two positive numbers expected")]))





