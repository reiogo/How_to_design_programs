; Nature of Numbers Home Version

; N -> N
; determine number that becomes inf representation
; when its the exponent of #i10.0

(define (inf-overflow n)
  (cond
    [(= (expt #i10.0 n) +inf.0) n]
    [else (inf-overflow (add1 n))]))
(inf-overflow 0)

